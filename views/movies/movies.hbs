<div class="container mx-auto px-4">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-gray-800">{{title}}</h1>
    <a href="/movies/create" class="bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">
      Add New Movie
    </a>
  </div>

  {{#if movies.length}}
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {{#each movies}}
        <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow duration-300">
          <div class="p-6">
            <h2 class="text-xl font-bold text-gray-800 mb-2">{{this.title}}</h2>
            <p class="text-gray-600 mb-2"><span class="font-semibold">Genre:</span> {{this.genre}}</p>
            <p class="text-gray-600 mb-4 line-clamp-3"><span class="font-semibold">Plot:</span> {{this.plot}}</p>
            
            <div class="mb-4">
              <h3 class="font-semibold text-gray-700 mb-1">Cast:</h3>
              <ul class="list-disc list-inside text-gray-600">
                {{#each this.cast}}
                  <li>{{this.name}}</li>
                {{/each}}
              </ul>
            </div>
            
            <div class="flex justify-between mt-4">
              <a href="/movies/{{this._id}}" class="text-blue-500 hover:text-blue-700">View Details</a>
              <div class="space-x-2">
                <a href="/movies/{{this._id}}/edit" class="text-yellow-500 hover:text-yellow-700">Edit</a>
                <form action="/movies/{{this._id}}/delete" method="POST" class="inline">
                  <button type="submit" class="text-red-500 hover:text-red-700 bg-transparent border-none p-0 cursor-pointer">Delete</button>
                </form>
              </div>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  {{else}}
    <div class="bg-white rounded-lg shadow-md p-8 text-center">
      <p class="text-xl text-gray-600 mb-4">No movies found in the database.</p>
      <a href="/movies/create" class="inline-block bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">
        Add Your First Movie
      </a>
    </div>
  {{/if}}
</div>
